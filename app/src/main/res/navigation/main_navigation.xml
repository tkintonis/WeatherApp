<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.example.weatherapp.main.MainFragment"
        tools:layout="@layout/main_fragment_layout" >
        <action
            android:id="@+id/action_main_fragment_to_hour_fragment"
            app:destination="@id/hour_fragment" />
    </fragment>

    <fragment
        android:id="@+id/hour_fragment"
        android:name="com.example.weatherapp.main.fivedays.hour.HourForecastFragment"
        tools:layout="@layout/hour_forecast_layout" >
        <action
            android:id="@+id/action_hour_fragment_to_main_fragment"
            app:destination="@id/main_fragment" />
    </fragment>

</navigation>