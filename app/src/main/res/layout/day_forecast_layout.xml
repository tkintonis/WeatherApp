<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.example.weatherapp.network.models.WeatherDayItem" />

        <variable
            name="listener"
            type="com.example.weatherapp.main.fivedays.OnExpandListener" />

        <variable
            name="buttonListener"
            type="com.example.weatherapp.main.fivedays.OnDetailsListener" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="@{() -> listener.expand(vm)}"
            app:layout_constraintBottom_toTopOf="@id/info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_48dp"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginBottom="@dimen/_8dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/dateString">

                <ImageView
                    android:id="@+id/weather_icon"
                    android:layout_width="@dimen/_48dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/dateString"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto_lightitalic"
                android:text="@{vm.formatDate}"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/icon"
                app:layout_constraintBottom_toBottomOf="@id/icon"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintEnd_toStartOf="@id/arrow_button"
                tools:text="Weather on : 12.12.2020" />

            <ImageView
                android:id="@+id/arrow_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_16dp"
                android:rotation="@{vm.expanded? 180: 0}"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintBottom_toBottomOf="@id/icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/dateString"
                app:layout_constraintTop_toTopOf="@id/icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue"
            android:orientation="vertical"
            android:visibility="@{vm.expanded? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_view">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray" />


            <TextView
                android:id="@+id/maxTempString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_blackitalic"
                android:padding="@dimen/_16dp"
                android:text="@{vm.formatMaxTemp}"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                tools:text="12.12.2020" />

            <TextView
                android:id="@+id/minTempString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_blackitalic"
                android:padding="@dimen/_16dp"
                android:text="@{vm.formatMinTemp()}"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                tools:text="12.12.2020" />

            <TextView
                android:id="@+id/avgTempString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_blackitalic"
                android:padding="@dimen/_16dp"
                android:text="@{vm.formatAvgTemp}"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                tools:text="12.12.2020" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16dp"
                android:onClick="@{() -> buttonListener.getDetails(vm)}"
                android:text="@string/see_more"
                app:backgroundTint="@color/sky_blue" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>